@page
@model IndexModel
@{
    ViewData["Title"] = "Matrix Inc. Home";
}

<link rel="stylesheet" href="~/css/homepage.css" />

<div class="promo-banner container text-center my-4">
    <img src="~/images/banners/banner-schroevendeal.png" class="img-fluid rounded-4" alt="25% korting banner" />
</div>

<div class="container popular-products">
    <h2 class="mb-1 mt-5 text-left">
        Onze <span class="fw-bold text-decoration-underline">veelgebruikte</span> producten:
    </h2>

    <div class="row justify-content-center g-4">
        @if (Model.FeaturedProducts.Any())
        {
            foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-6 col-sm-4 col-md-3 text-center">
                    <div class="product-box p-3">
                        <a href="/Product/Details/@product.Id" class="text-decoration-none text-dark">
                            <img src="@product.ImagePath" alt="@product.Name" class="img-fluid rounded-4 mb-2" />
                            <div class="fw-semibold small product-text">@product.Name</div>
                        </a>
                        <div class="fw-bold product-price">€@product.Price.ToString("0.00")/@product.Unit</div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Er zijn momenteel geen populaire producten beschikbaar.</p>
        }
    </div>
</div>

